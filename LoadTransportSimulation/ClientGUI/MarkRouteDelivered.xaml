<Window x:Class="ClientGUI.MarkRouteDelivered"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="MarkRouteDelivered" Height="350" Width="537.037">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Mark your overall route:" Grid.Row="0" VerticalAlignment="Bottom" FontWeight="DemiBold"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Content="Distance km:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"/>
            <TextBox Name="tb_distance" Grid.Column="1" Grid.Row="0"/>
            <Label Content="Time Driving" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"/>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="tb_timedays" Grid.Column="0"/>
                <Label Content="D" Grid.Column="1" HorizontalAlignment="Left" ToolTip="Days" Margin="0,0,10,0"/>
                <TextBox Name="tb_timehours" Grid.Column="2"/>
                <Label Content="H" Grid.Column="3" HorizontalAlignment="Left" ToolTip="Hours" Margin="0,0,10,0"/>
                <TextBox Name="tb_timeminutes" Grid.Column="4"/>
                <Label Content="M" Grid.Column="5" HorizontalAlignment="Left" ToolTip="Minutes" Margin="0,0,10,0"/>
            </Grid>
            <Label Content="Fuel consumption:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"/>
            <TextBox Name="tb_fuelconsump" Grid.Column="1" Grid.Row="2"/>
            <Label Content="Cost:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"/>
            <TextBox Name="tb_cost" Grid.Column="1" Grid.Row="3"/>

            <Label Content="Salary received:" Grid.Column="2" Grid.Row="0" ToolTip="Full salary received, without costs subtracted" HorizontalAlignment="Right"/>
            <TextBox Name="tb_salary" Grid.Column="3" Grid.Row="0"/>
            <Label Content="Revenue:" Grid.Column="2" Grid.Row="1" ToolTip="Final revenue, after all costs taken off the earned salary" HorizontalAlignment="Right"/>
            <TextBox Name="tb_revenue" Grid.Column="3" Grid.Row="1"/>
            <Label Content="End date:" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right"/>
            <TextBox Name="tb_date" Grid.Column="3" Grid.Row="2"/>
        </Grid>

        <Label Content="Fill in each of the loads:" Grid.Row="2" VerticalAlignment="Bottom" Margin="0,10,0,0" FontWeight="DemiBold"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Content="Selected load:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"/>
            <ComboBox Name="cb_selectedload" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"/>
            
            <Label Content="Time arrived:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"/>
            <DatePicker Name="tb_load_timearrived" Grid.Column="1" Grid.Row="2"/>
            <Label Content="Final Salary:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"/>
            <TextBox Name="tb_loadsalary" Grid.Column="1" Grid.Row="3"/>

            <Label Content="Comment:" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right"/>
            <TextBox Name="tb_loadcomment" Grid.Column="3" Grid.Row="2" Grid.RowSpan="1"/>
        </Grid>

        <Button Content="Mark as delivered" Grid.Row="4" HorizontalAlignment="Right" Margin="5" FontSize="12" FontWeight="Normal" Height="auto"/>




    </Grid>
</Window>
